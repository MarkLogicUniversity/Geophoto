.navbar.navbar-default.navbar-fixed-top(role='navigation', ng-controller='NavigationController')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Geophoto
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(ng-class='vm.isActive("/")')
          a(href='/') Home
        li(ng-class='vm.isActive("map")')
          a(href='#/map') Map
        li(ng-class='vm.isActive("search")')
          a(class='dropdown-toggle', data-toggle='dropdown', role='button', aria-expanded='false') Search
            span(class='caret')
          ul(class='dropdown-menu', role='menu')
            li(ng-class='vm.isActive("search")')
              a(href="#/geosearch") Geo Search
            li(ng-class='vm.isActive("search")')
              a(href="#/textsearch") Text Search
